<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="900.0"  fx:controller="tech.houssemnasri.gce.ui.MainView">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="16.0" AnchorPane.bottomAnchor="24.0" AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="16.0">
            <children>
                <VBox prefHeight="560.0" prefWidth="550.0" spacing="24.0">
                    <children>
                        <HBox prefHeight="25.0" prefWidth="662.0">
                            <children>
                                <HBox prefWidth="200.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#loadProgram" text="Load" HBox.hgrow="NEVER" />
                                    </children>
                                </HBox>
                                <ButtonBar prefWidth="200.0" HBox.hgrow="NEVER">
                                    <buttons>
                                        <Button mnemonicParsing="false" onAction="#runPreviousInstruction" text="Previous" />
                                        <Button mnemonicParsing="false" onAction="#runOrPauseSimulation" text="Run/Pause" />
                                        <Button mnemonicParsing="false" onAction="#runNextInstruction" text="Next" />
                                    </buttons>
                                </ButtonBar>
                            </children>
                        </HBox>
                        <TableView fx:id="instructionsTableView" prefHeight="388.0" prefWidth="590.0" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                    <children>
                        <TabPane fx:id="sideTabpane" maxHeight="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="16.0">
                            <children>
                                <Label text="Display Mode" />
                                <ComboBox fx:id="dataDisplayModeCombobox" prefWidth="100.0" promptText="Hex" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>